<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timbre</title>
</head>
<body>
    <style>
        * {
            margin: 0;
            padding: 0;
            border: 0;
            box-sizing: border-box;
        }

        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        .container {
            height: 96vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container input {
            margin-bottom: 20px;
            padding: 5px 10px;
            background-color: rgba(189, 189, 189, 0.493);
            outline: none;
            margin-top: 5px;
            border-radius: 5px;
            font-size: 20px;
        }

        .container input::placeholder {
            content: attr('data-content')
        }

        .container button {
            all: unset;

            background-color: #09f;
            color: #fff;
            border-radius: 5px;
            padding: 10px 15px;
            font-weight: bold;
            text-align: center;
            font-size: 20px;
            cursor: pointer;
        }

        .container label {
            font-size: 22px;
        }

        .container .form {
            border: 1px solid rgba(128, 128, 128, 0.253);
            padding: 20px;
            display: flex;
            flex-direction: column;
            border-radius: 5px;
        }
    </style>

    <main class="container">
        <div class="form">
            <label>Tiempo de encendido</label>
            <input type="text" id="input" data-content="">
            <button id="boton">Encender</button>
        </div>
    </main>

    <script type="module">
        const boton = document.getElementById('boton')
        const input = document.getElementById('input')

        boton.addEventListener('click', () => {
            const numero = input.value

            fetch('http://localhost:3000/timbre/encender?apikey=cambiardespues&secs=' + numero)
                .then(response => response.json())
                .then(data => console.log(data))
                .catch((err) => { console.error(err) })
            })
    </script>
</body>
</html>